.PHONY: all clean fclean norm re

SRCS := $(wildcard ft_*.c)

OBJ_DIR = build
OBJS := $(SRCS:%.c=$(OBJ_DIR)/%.o)

NAME = libft.a
MUSTAFA_FLAGS = -Werror -Wall -Wextra

all: $(NAME)

$(NAME): $(OBJS)
	ar -rc $@ $^
	ranlib $@

$(OBJ_DIR)/%.o: %.c | $(OBJ_DIR)
	gcc -c $(MUSTAFA_FLAGS) -o $@ $<

norm:
	norminette

clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -rf $(NAME)

re: fclean $(NAME)
	

$(OBJ_DIR):
	mkdir -p $(OBJ_DIR)
