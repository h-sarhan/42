.PHONY: all clean fclean norm re

SRCS := $(wildcard ft_*.c)

OBJS := $(SRCS:%.c=%.o)

NAME = libft.a
MUSTAFA_FLAGS = -Werror -Wall -Wextra

all: $(NAME)

$(NAME): $(OBJS)
	ar -rc $@ $^
	ranlib $@

%.o: %.c
	gcc $(MUSTAFA_FLAGS) -c $^ 

norm:
	norminette

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean $(NAME)
	
